#!/bin/bash
set -e
tar -xf "$ARCHIVE_DIR/$ARCHIVE"
cd mono-tools-2.10
./configure --prefix=$MONO_PREFIX

make && sudo checkinstall -D \
  --fstrans=yes \
  --exclude=$HOME/.ccache \
  --pkgname pmono-mono-tools \
  --pkgaltsource "$URL" \
  --pkgversion 2.10 \
  --maintainer "Ian Norton" \
  --requires pmono-mono,pmono-gtk-sharp2 \
  --default \
  --pakdir "$ARCHIVE_DIR" 

set +e
