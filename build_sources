#!/bin/bash

set -e

if [ "x" == "x$ARCHIVE_DIR" ] 
then
   echo "run build_mono first"
   exit
fi

echo "ARCHIVE_DIR=$ARCHIVE_DIR"
echo "SOURCE_DIR=$SOURCE_DIR"

for grp in $ARCHIVE_DIR/*.d
do
  echo +++++++++++++++++++++++++++++++++++
  gname=`basename $grp`
  echo "starting group : $gname"
  echo -----------------------------------


  for fetch in $grp/*.get
  do
     echo $fetch
     bash $BUILD_TOOL_PATH/build_one $fetch
  done
done

