#!/bin/bash

set -e

if [ "x" == "x$MONO_PREFIX" ]; then
	echo "MONO_PREFIX is not set"
	exit 1
fi

echo "create $MONO_PREFIX"
sudo mkdir -p $MONO_PREFIX

source mono_env $MONO_PREFIX

export BUILD_TOOL_PATH=$HOME
export SOURCE_DIR="$HOME/sources"
export ARCHIVE_DIR="$HOME/archives"


export GLOBAL_MAINTAINER="Ian Norton"
export GLOBAL_EXCLUDE="$HOME,$HOME/.ccache,/opt/mono/share/icons/hicolor/icon-theme.cache"
export GLOBAL_RELEASE_NUMBER=2

$BUILD_TOOL_PATH/build_sources

